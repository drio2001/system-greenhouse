{
  "name": "C++ Development Container",
  "image": "mcr.microsoft.com/devcontainers/cpp",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "twxs.cmake",
    "ms-vscode.cmake-tools"
  ],
  "features": {
    "ghcr.io/devcontainers/features/gcc:1": {}
  },
  "postCreateCommand": "g++ --version && make --version",
  "remoteUser": "vscode"
}
